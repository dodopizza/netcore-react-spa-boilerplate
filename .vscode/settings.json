// Place your settings in this file to overwrite default and user settings.
{
    "editor.renderWhitespace": "all",
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
    "editor.formatOnPaste": true,
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/bin": true,
        "**/obj": true,
        "**/dist": true,
        "**/*.user": true,
        "**/node_modules": true
    }
}